<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".MyProfile">

    <TextView
        android:id="@+id/main_text_settings"
        android:layout_width="123dp"
        android:layout_height="123dp"
        android:clickable="true"
        android:drawableTop="@drawable/ic_user"
        android:focusable="true"
        android:onClick="toSettings"
        android:text="@string/btn_settings"
        android:textAlignment="center"
        android:textColor="@color/silver"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_image_logo"
        android:layout_width="261dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:contentDescription="@string/desc_logo"
        android:focusable="true"
        android:onClick="toConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_simple" />

    <TextView
        android:id="@+id/main_text_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableTop="@drawable/ic_connect_100"
        android:focusable="true"
        android:onClick="toConnect"
        android:text="@string/btn_connect"
        android:textAlignment="center"
        android:textColor="@color/silver"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_text_myConnections"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_text_myConnections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableTop="@drawable/ic_my_connections_100"
        android:focusable="true"
        android:onClick="toMyConnections"
        android:text="@string/btn_myConnections"
        android:textAlignment="center"
        android:textColor="@color/silver"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_text_events"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_text_connect" />

    <TextView
        android:id="@+id/main_text_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableTop="@drawable/ic_events_100"
        android:focusable="true"
        android:onClick="toEvents"
        android:text="@string/btn_events"
        android:textAlignment="center"
        android:textColor="@color/silver"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_text_myConnections" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_profileUser"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="128dp"
        android:background="@drawable/background_border"
        android:padding="1dp"/>

    <RelativeLayout
        android:layout_width="171dp"
        android:layout_height="176dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="220dp"
        android:background="@drawable/background_border"
        android:padding="1dp">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="170dp"
            android:layout_height="174dp"
            android:src="@drawable/ic_user" />

        <ImageView
            android:id="@+id/profile_pic_edit"
            android:layout_width="35dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="137dp"
            android:src="@drawable/ic_edit"
            android:onClick="toChangeProfilePic"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="260dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="223dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="220dp"
        android:background="@drawable/background_border"
        android:padding="1dp">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/user_name"
            android:textAlignment="center"
            android:textSize="42sp" />

        <ImageView
            android:id="@+id/profile_name_edit"
            android:layout_width="31dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="191dp"
            android:src="@drawable/ic_edit"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="260dp"
            android:onClick="toChangeName"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="224dp"
        android:layout_height="114dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="282dp"
        android:background="@drawable/background_border"
        android:padding="1dp">

        <TextView
            android:id="@+id/profile_goal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="@string/hereTo"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/profile_goal2"
            android:layout_width="227dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="0dp"
            android:text="@string/user_goals"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/profile_goal_edit"
            android:layout_width="31dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="191dp"
            android:src="@drawable/ic_edit"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="260dp"
            android:onClick="toChangeGoal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="394dp"
        android:layout_height="177dp"
        android:background="@drawable/background_border"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="405dp">

        <TextView
            android:id="@+id/profile_interess"
            android:layout_width="358dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="-4dp"
            android:text="@string/user_interests"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/profile_interest_edit"
            android:layout_width="31dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="362dp"
            android:src="@drawable/ic_edit"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="260dp"
            android:onClick="toChangeInterest" />

        <TextView
            android:id="@+id/profile_bio"
            android:layout_width="358dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="-4dp"
            android:text="@string/user_bio"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/profile_bio_edit"
            android:layout_width="31dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="361dp"
            android:src="@drawable/ic_edit"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="260dp"
            android:onClick="toChangeBio" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>